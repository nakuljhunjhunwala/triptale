{
  "name": "trek-tale-api",
  "version": "1.0.0",
  "description": "Node JS with Typescript",
  "main": "dist/http.js",
  "author": "",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist/http.js",
    "clean": "run-p clean:**",
    "clean:dist": "rm -rf ./dist/*",
    "build": "run-s clean build:**",
    "build:ts": "tsc --build tsconfig.json",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon --inspect dist/http.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"run-s watch:ts\" \"run-s watch:node\""
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.3",
    "pg": "^8.2.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.3",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.2",
    "@types/jest": "^26.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.7.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "remark-lint": "^7.0.0",
    "remark-preset-lint-recommended": "^4.0.0",
    "ts-jest": "^26.1.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.9.5"
  }
}
